{
  "search.useIgnoreFiles": false,
  "search.exclude": {
      "**/.next": true,
      "**/build": true,
      "**/node_modules": true,
      "**/out": true,
      "**/script.js": true,
      "**/*-cache": true,
      "**/dist": true,
      "yarn.lock": true,
      "**/*.mdx": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": false,
  "editor.codeActionsOnSaveTimeout": 6000,
  "css.lint.unknownAtRules": "ignore",
  "eslint.options": {
    "configFile": "./.config/.eslintrc.js"
  },
  "eslint.lintTask.options": "-c ${workspaceRoot}/.config/.eslintrc.js --ext .ts,.js,.tsx .",
  "eslint.lintTask.enable": true, 
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.formatOnSave": true   
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.alwaysShowStatus": true,
  "files.eol": "\n",
  // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
  "typescript.tsc.autoDetect": "off",
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascript": "javascriptreact",
    "typescript": "javascript",
    "typescriptreact": "javascriptreact"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#d0cae4",
    "activityBar.activeBorder": "#b47c6b",
    "activityBar.background": "#d0cae4",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#b47c6b",
    "activityBarBadge.foreground": "#15202b",
    "editorGroup.border": "#d0cae4",
    "panel.border": "#d0cae4",
    "sash.hoverBorder": "#d0cae4",
    "sideBar.border": "#d0cae4",
    "statusBar.background": "#b2a9d2",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#9488c0",
    "statusBarItem.remoteBackground": "#b2a9d2",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#b2a9d2",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#b2a9d299",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#b2a9d2"
}